<UserControl x:Class="Substation_Builder.Pages.OnelineView.ButtonsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary Source="EditorStyles.xaml"/>
    </UserControl.Resources>
    <DockPanel HorizontalAlignment="Center">
        
        <ToggleButton IsChecked="{Binding CreatingNewNode}">
            <Rectangle Height="20" Width="20" Stroke="Black" 
                     StrokeThickness="1" Fill="Yellow">
            </Rectangle>
        </ToggleButton>
        
        <ToggleButton IsChecked="{Binding CreatingNewConnector}">
            <Canvas Height="45" Width="45">
                <Line Stroke="Red" StrokeThickness="2" StrokeDashArray="2 3"
                            X1="10" Y1="10"
                            X2="35" Y2="35"/>

                <Rectangle Height="10" Width="10" Stroke="Black"
                         Canvas.Top="5" Canvas.Left="5"
                     StrokeThickness="1" Fill="Yellow">
                </Rectangle>

                <Rectangle Height="10" Width="10" Stroke="Black"
                         Canvas.Top="30" Canvas.Left="30"
                     StrokeThickness="1" Fill="Yellow">
                </Rectangle>
            </Canvas>
        </ToggleButton>
        
        <Button Command="{Binding DeleteCommand}">
            <!--Need to add icon-->
            <Image HorizontalAlignment="Center" VerticalAlignment="Center"
                   Width="40" Height="40" Source="/Substation Builder;component/Resources/Images/Trash.png"/>
        </Button>
    </DockPanel>
</UserControl>
