<UserControl x:Class="Substation_Builder.Pages.OnelineView.ButtonsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <DockPanel HorizontalAlignment="Center">

        <DockPanel.Resources>

            <Style TargetType="{x:Type ToggleButton}">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Opacity" Value="0.85"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="Width" Value="50"/>
                <Setter Property="Height" Value="50"/>
                <Setter Property="Background" Value="LightGray"/>
            </Style>

            <Style TargetType="{x:Type Button}">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Opacity" Value="0.85"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="Width" Value="50"/>
                <Setter Property="Height" Value="50"/>
                <Setter Property="Background" Value="LightGray"/>
            </Style>

            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="Opacity" Value="0.85"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>

        </DockPanel.Resources>

        <StackPanel>

            <!-- Breaker Icon -->
            <Button Command="{Binding AddBreaker}">
                <Grid>
                    <Rectangle Width="40" Height="40" Stroke="Black" StrokeThickness="2" Fill="Red"/>
                    <TextBlock Text="52"/>
                </Grid>
            </Button>

            <!-- Relay Icon -->
            <ToggleButton IsChecked="{Binding CreatingNewNode}">
                <Grid>
                    <Ellipse Width="40" Height="40" Stroke="Black" StrokeThickness="2" Fill="#FF3AFF00"/>
                    <TextBlock Text="51"/>
                </Grid>
            </ToggleButton>

            <!-- Delete Icon -->
            <Button Command="{Binding DeleteCommand}">
                <Grid>
                    <Ellipse Width="40" Height="40" Stroke="Black" StrokeThickness="2" Fill="White"/>
                    <TextBlock Text="DEL"/>
                </Grid>
            </Button>

        </StackPanel>

        <StackPanel>
            
            <!-- Transformer Icon -->
            <ToggleButton IsChecked="{Binding CreatingNewNode}" Width="100" Height="100">
                <Grid>
                    <Line StrokeThickness="4" X1="0" X2="0" Y1="0" Y2="10" Stroke="Black" Margin="20,0,20,74" HorizontalAlignment="Center"/>
                    <Ellipse Height="40" Width="40" Stroke="Black" StrokeThickness="4" Margin="0,0,0,25" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Ellipse Height="40" Width="40" Stroke="Black" StrokeThickness="4" Margin="0,25,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Line StrokeThickness="4" X1="0" X2="0" Y1="0" Y2="10" Stroke="Black" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="20,0,20,0"/>
                </Grid>
            </ToggleButton>

            <!-- Connector Icon -->
            <ToggleButton IsChecked="{Binding CreatingNewConnector}">
                
                <Canvas Height="35" Width="35">
                    <Line X1="0" Y1="0" X2="25" Y2="25" Height="25" Width="25" Stroke="#FF1E44F1" StrokeThickness="2" StrokeDashArray="2 1"/>
                    <Rectangle Height="10" Width="10" Stroke="Black" StrokeThickness="2" Fill="Red"/>
                    <Rectangle Height="10" Width="10" Stroke="Black" StrokeThickness="2" Fill="Red" Canvas.Left="23" Canvas.Top="23"/>
                </Canvas>
                
            </ToggleButton>

        </StackPanel>

    </DockPanel>
</UserControl>
